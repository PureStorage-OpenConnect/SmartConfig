      <args>
        <arg mapval="3" name="mds_id" value="mds_switch_b"/>
        <arg mapval="1" name="portchannel_id" value="__t303.Create Port Channel for switch B.portchannel_id"/>
        <arg mapval="0" name="fc_list" value="fc1/5|fc1/6|fc1/7|fc1/8"/>
      </args>
    </task>
  </tasks>
</workflow>